<h2>Edit Fruit</h2>

<%= form_for @fruit do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>

<%= form_for @fruit, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
