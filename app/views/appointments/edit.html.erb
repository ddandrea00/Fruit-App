<%= stylesheet_link_tag    "user" %>

<h2>Edit Fruit</h2>

<%= form_for @appointment do |f| %>
  <%= f.label :date_and_time %>
  <%= f.text_field :date_and_time %> <br/>

  <%= f.label :location %>
  <%= f.text_field :location %> <br/>

  <%= f.label :notes %>
  <%= f.text_field :notes %> <br/>

  <%= f.submit %>
<% end %>

<%= form_for @appointment, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>